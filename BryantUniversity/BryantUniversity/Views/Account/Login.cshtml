@model BryantUniversity.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
} 

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div id="container">
        <div id="form">
            <h2 style="color: black; font-family: Roboto; font-weight: 800">Sign In</h2>
            <div id="label">
                @Html.LabelFor(m => m.Email, new { Style = "color:black;" })
                @Html.TextBoxFor(m => m.Email, new { Style = "color:black;", id = "email"})
            </div>

            <div id="label">
                @Html.LabelFor(m => m.Password, new { Style = "color:black;" })
                @Html.PasswordFor(m => m.Password, new { Style = "color:black;", id = "password" })
            </div>

            <div>
                <button type="submit" id="submit" class="btn btn-success btn-lg">Login</button>
            </div>
        </div>
    </div>
}


<style>
    #container{
        text-align: center;
        color: #f8f8ff;
    }

    #form{
        display: inline-block;
        width: 350px;
        height: 400px;
        padding: 12px 20px;
        margin: 8px 0 auto;
        border: 2px solid #000000;
        box-sizing: border-box;
        border-radius: 10px;
    }

    #email, #password {
        width: 100%;
        height: 50px;
        border: 2px solid #000000;
        border-radius: 10px;
        font-size: 13px;
        font-family: Roboto;
        font-weight: 600;
    }

    #label {
        padding: 10px;
    }
</style>