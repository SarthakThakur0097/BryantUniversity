@model IList<BryantUniversity.Models.Registration>
@{
    ViewBag.Title = "Students";
}

<h2>Students</h2>

<table class="pure-table pure-table-horizontal">
    <thead>
        <tr lass="bench-row">
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var student in Model)
            {
            <tr>
                <td>@student.User.Name</td>
                <td>@student.User.Email</td>
                <td>
                    @Html.ActionLink("assign grade", "Assign", "Grades", new { id = student.User.Id, rId = student.CourseSectionId }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>