@model  BryantUniversity.ViewModels.StudentAttendanceViewModel
@{
    ViewBag.Title = "Students";
}

<h2>Students</h2>

<table class="table">
    <thead class="thead-dark">
        <tr lass="bench-row">
            <th>Name</th>
            <th>Email</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var student in Model.students)
            {
            <tr>
                <td>@student.User.Name</td>
                <td>@student.User.Email</td>
                <td>
                    @Html.ActionLink("assign grade", "AssignGrade", "Grades", new { id = student.User.Id, cid = student.CourseSectionId}, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("attendance", "Attendance", "Student", new { id = student.User.Id, registrationId = student.Id}, new { @class = "btn btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("view attendance", "Attendancebook", "Student", new { id = student.User.Id, cid = student.CourseSectionId }, new { @class = "btn btn-primary" })
                </td>
                <td>
                    @using (Html.BeginForm("Schedule", "Student", new { id = student.UserId }, FormMethod.Post, new { @class = "pure-form pure-form-aligned" }))
                    {
                            <div >
                                <button type="submit" class="btn btn-success">Schedule</button>
                            </div>

                    }
                </td>
                <td>
                    @using (Html.BeginForm("TranscriptAdmin", "Student", new { id = student.UserId }, FormMethod.Post, new { @class = "pure-form pure-form-aligned" }))
                    {
                            <div >
                                <button type="submit" class="btn btn-success">Transcript</button>
                            </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>