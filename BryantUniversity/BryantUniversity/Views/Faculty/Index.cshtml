@model BryantUniversity.ViewModels.UserListViewModel

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-5">

        </div>
        <div class="col-sm">
            <h2>All Users</h2>
        </div>
        <div class="col-md-5">

        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <div class="md-form mt-0">
                <input id="myInput" class="form-control" type="text" placeholder="Search..">
            </div>
        </div>
        <div class="col-md-8">
        
        </div>
        <div class="col-sm">
            <p>
                @Html.ActionLink("Create User", "Create", new { }, new { @class = "btn btn-success" })
            </p>
        </div>
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th></th>
                        <th>Edit User</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            @if(user.UserRoles[0].RoleId==1)
                            {
                                <td>Admin</td>
                                <td></td>
                            } else if(user.UserRoles[0].RoleId==2)
                            {
                                <td>Faculty</td>
                                <td>@Html.ActionLink("View Schedule", "Details", "Faculty", new { id = user.Id }, new { @class = "btn btn-primary" })</td>
                            }
                            else if (user.UserRoles[0].RoleId == 3)
                            {
                                <td>Researcher</td>
                                <td></td>
                            }
                            else if (user.UserRoles[0].RoleId == 4)
                            {
                                <td>@Html.ActionLink("View Schedule", "Details", "Student", new { id = user.Id }, new { @class = "btn btn-primary" })</td>

                            }
                            else if (user.UserRoles.Count == 0)
                            {
                                <td>Does not have a User Rule</td>
                            }
                            <td>@Html.ActionLink("Edit", "Edit", "Faculty", new { id = user.Id }, new { @class = "btn btn-primary" })</td>
                            @if(user.UserRoles[0].RoleId==4)
                            {
                            <td>Student</td>
                            <td>@Html.ActionLink("Assign Advisor", "Advisor", "Faculty", new { id = user.Id }, new { @class = "btn btn-primary" })</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>

            <div id="tableContainer">
                <table id="list" class="pure-table pure-table-horizontal">
                    <thead>
                        <tr></tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
    </div>

</div>

<script src="~/scripts/user.js"></script>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>