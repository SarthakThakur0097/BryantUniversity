
@{
    ViewBag.Title = "Index";
}


<div class="container" style="padding-top:25px">

    <div class="row">
        <div class="col" align="center">
            <h5>BRYANT UNIVERSITY</h5>
        </div>
    </div>
    <div class="row">

        <div class="col">
            <!-- Slideshow container -->
            <div class="slideshow-container">

                <!-- Full-width images with number and caption text -->
                <div class="mySlides fade">
                    <img src="~/Resources/img1.jpg" style="width:100%">
                    <div class="text"></div>
                </div>

                <div class="mySlides fade">
                    <div class="numbertext">2 / 3</div>
                    <img src="~/Resources/img2.jpg" style="width:100%">
                    <div class="text">Caption Two</div>
                </div>

                <div class="mySlides fade">
                    <div class="numbertext">3 / 3</div>
                    <img src="~/Resources/img3.jpg" style="width:100%">
                    <div class="text">Caption Three</div>
                </div>

                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
            </div>
            <br>

            <!-- The dots/circles -->
            <div style="text-align:center">
                <span class="dot" onclick="currentSlide(1)"></span>
                <span class="dot" onclick="currentSlide(2)"></span>
                <span class="dot" onclick="currentSlide(3)"></span>
            </div>

        </div>

    </div>

    <div class="row">
        <div class="col" align="center">

            <i id="icon" class="fa-solid fa-book fa-5x"></i>
        </div>
        <div class="col" align="center">

            <i id="icon" class="fa-solid fa-map-location-dot fa-5x"></i>
        </div>
        <div class="col" align="center">
            <i id="icon" class="fa-solid fa-square-pen fa-5x"></i>
        </div>
    </div>
    <div class="row">
        <div class="col" align="center">
            <h6>Our Programs</h6>
        </div>
        <div class="col" align="center">
            <h6>Visit Campus</h6>
        </div>
        <div class="col" align="center">
            <h6>Apply Now!</h6>
        </div>
    </div>
    <div class="row" align="center">
        <div class="col" align="center">
            <h2>Our Most Popular Majors</h2>
        </div>
    </div>
    <div class="row">
        <div class="col" align="center">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/Resources/bioinform.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">BIOINFORMATICS AND COMPUTATIONAL BIOLOGY</h5>
                    <p class="card-text">Math, scientific computing and natural sciences combine through advanced coursework and research to provide the skills necessary to solve biological problems using programming and computers.</p>
                </div>

                <div class="card-body">
                    @Html.ActionLink("Learn More", "Login", "Account", new { area = "" }, new { @class = "btn btn-success rounded-pill" })
                </div>
            </div>
        </div>
        <div class="col" align="center">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/Resources/environmental_studies.jpg" style="height:100px" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">ENVIRONMENTAL STUDIES</h5>
                    <p class="card-text">Learn to use the tools of history and the social sciences to approach environmental problems from a social perspective and to seek out socially just solutions.</p>
                </div>

                <div class="card-body">
                    @Html.ActionLink("Learn More", "Login", "Account", new { area = "" }, new { @class = "btn btn-success rounded-pill" })
                </div>
            </div>
        </div>
        <div class="col" align="center">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/Resources/economics.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">ECONOMICS</h5>
                    <p class="card-text">Integrating economic theory with analysis of how economies adapt over time and across the globe to foster critical thinking and assessment skills that can be applied to issues challenging both the business and government sectors.</p>
                </div>

                <div class="card-body">
                    @Html.ActionLink("Learn More", "Login", "Account", new { area = "" }, new { @class = "btn btn-success rounded-pill" })
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    article {
        background-color: #daa520;
    }

    #icon {
        color: mediumpurple;
    }

    .container {
        max-width: 100%;
        max-height: 50%;
    }

    .one {
        max-width: 50%;
        float: left;
    }

    .two {
        max-width: 30%;
        float: left;
    }

    * {
        box-sizing: border-box;
    }

    /* Slideshow container */
    .slideshow-container {
        max-width: 100%;
        position: relative;
        margin: auto;
    }

    /* Hide the images by default */
    /*.mySlides {
      display: none;
    }*/

    /* Next & previous buttons */
    .prev, .next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        width: auto;
        margin-top: -22px;
        padding: 16px;
        color: white;
        font-weight: bold;
        font-size: 18px;
        transition: 0.6s ease;
        border-radius: 0 3px 3px 0;
        user-select: none;
    }

    /* Position the "next button" to the right */
    .next {
        right: 0;
        border-radius: 3px 0 0 3px;
    }

        /* On hover, add a black background color with a little bit see-through */
        .prev:hover, .next:hover {
            background-color: rgba(0,0,0,0.8);
        }

    /* Caption text */
    .text {
        color: #f2f2f2;
        font-size: 15px;
        padding: 8px 12px;
        position: absolute;
        bottom: 8px;
        width: 100%;
        text-align: center;
    }

    /* Number text (1/3 etc) */
    .numbertext {
        color: #f2f2f2;
        font-size: 12px;
        padding: 8px 12px;
        position: absolute;
        top: 0;
    }

    /* The dots/bullets/indicators */
    .dot {
        cursor: pointer;
        height: 15px;
        width: 15px;
        margin: 0 2px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
    }

        .active, .dot:hover {
            background-color: #717171;
        }

    /* Fading animation */
    .fade {
        -webkit-animation-name: fade;
        -webkit-animation-duration: 1.5s;
        animation-name: fade;
        animation-fill-mode: forwards;
        /*animation-duration: 1.5s;*/
    }

    @@-webkit-keyframes fade {
        from {
            opacity: .4;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes fade {
        from {
            opacity: .4;
        }

        to {
            opacity: 1;
        }
    }
</style>

<script>
    var slideIndex = 1;
    showSlides(slideIndex);

    // Next/previous controls
    function plusSlides(n) {
        showSlides(slideIndex += n);
    }

    // Thumbnail image controls
    function currentSlide(n) {
        showSlides(slideIndex = n);
    }

    function showSlides(n) {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("dot");
        if (n > slides.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = slides.length }
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex - 1].style.display = "block";
        dots[slideIndex - 1].className += " active";
    }
</script>
