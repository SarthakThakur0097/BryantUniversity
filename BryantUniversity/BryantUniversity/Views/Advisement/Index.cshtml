@model BryantUniversity.ViewModels.AdvisorViewModel

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-5">

        </div>
        <div class="col-sm">
            <h2>All Advisements</h2>
        </div>
        <div class="col-md-5">

        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <div class="md-form mt-0">
                <input id="myInput" class="form-control" type="text" placeholder="Search..">
            </div>
        </div>
        <div class="col-md-8">

        </div>
        <div class="col-sm">
        </div>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Student ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Advised By</th>
                    <th>Faculty Id</th>
                    <th>Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var advisement in Model.AllAdvisements)
                {
                    <tr>
                        <td>@advisement.StudentId</td>
                        <td>@advisement.Student.Name</td>
                        <td>@advisement.Student.Email</td>
                        <td></td>
                        <td>@advisement.FacultyId</td>
                        <td>@advisement.Faculty.Name</td>
                        <td>@advisement.Faculty.Email</td>

                        
                    </tr>
                }
            </tbody>
        </table>

        <div id="tableContainer">
            <table id="list" class="pure-table pure-table-horizontal">
                <thead>
                    <tr></tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

</div>

<script src="~/scripts/user.js"></script>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>