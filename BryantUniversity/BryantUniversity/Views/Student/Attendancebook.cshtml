@model BryantUniversity.ViewModels.AttendancebookViewModel
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-5">

        </div>
        <div class="col-sm">
            <h2>Attendance</h2>
        </div>
        <div class="col-md-5">

        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <div class="md-form mt-0">
                <input id="myInput" class="form-control" type="text" placeholder="Search..">
            </div>
        </div>
        <div class="col-sm">

        </div>
        <div class="col-md-3">

        </div>
        <div class="col-sm">

        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <table class="table">
                <thead class="thead-dark">
                    <tr lass="bench-row">
                        <th>Name</th>
                        <th>Email</th>
                        <th>Course ID</th>
                        <th>Professor</th>
                        <th>Date</th>
                        <th>Present</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    @foreach (var attendance in Model.Students)
                    {
                        <tr>
                            <td>@attendance.User.Name</td>
                            <td>@attendance.User.Email</td>
                            <td>@attendance.Course.Course.CourseTitleId</td>
                            <td>@attendance.Course.Professor.Name</td>
                            <td>@attendance.DateOfClass</td>
                                
                            @if (attendance.IsPresent)
                            {
                                <td>True</td>
                            }
                            else
                            {
                                <td>False</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>