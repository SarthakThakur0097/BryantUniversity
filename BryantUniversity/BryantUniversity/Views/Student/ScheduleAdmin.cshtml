@model BryantUniversity.ViewModels.ScheduleViewModel
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-5">

        </div>
        <div class="col-sm">
            <h2>Schedule</h2>
        </div>
        <div class="col-md-5">
            <div class="md-form mt-0">
                <input id="myInput" class="form-control" type="text" placeholder="Search..">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
        </div>
        <div class="col-sm">

        </div>
        <div class="col-md-3">

        </div>
        <div class="col-sm">
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <table class="table">
                <thead class="thead-dark">
                    <tr lass="bench-row">
                        <th>CRN</th>
                        <th>Semester</th>
                        <th>Course Title</th>
                        <th>Course Time</th>
                        <th>Days</th>
                        <th>Professor</th>
                        <th>Building</th>
                        <th>Room Number</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    @if (Model.RegisteredClasses != null)
                    {
                        foreach (var registered in Model.RegisteredClasses)
                        {
                            <tr>
                                <td>@registered.CourseSection.Course.Id</td>
                                <td>@registered.CourseSection.SemesterPeriod.Period.Value</td>
                                <td>@registered.CourseSection.Course.CourseTitle</td>
                                <td>@registered.CourseSection.ClassDuration.TimeForClass.Value</td>
                                <td>@registered.CourseSection.ClassDays.Pattern.Value</td>
                                <td>@registered.CourseSection.Professor.Name</td>
                                <td>@registered.CourseSection.Room.Building.BuildingName</td>
                                <td>@registered.CourseSection.Room.Id</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>