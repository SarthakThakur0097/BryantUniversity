<table class="table">
    <thead class="thead-dark">
        <tr lass="bench-row">
            <td>Level</td>
            <td>Type</td>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th></th>
            <th></th>
            <th></th>
