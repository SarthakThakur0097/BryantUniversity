@model BryantUniversity.ViewModels.SemesterDetailsViewModel
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-5">

        </div>
        <div class="col-sm">
            <h2>Select Term</h2>
        </div>
        <div class="col-md-5">

        </div>
    </div>
    @using (Html.BeginForm("Index", "Schedule", FormMethod.Post, new { @class = "pure-form pure-form-aligned" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm">

                @Html.LabelFor(model => model.PeriodId, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.DropDownListFor(model => model.PeriodId, Model.PeriodList, "Period", new { @class = "form-control required", id = "period-list" })
                @Html.ValidationMessageFor(model => model.PeriodId)

            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    }
    @if (Model.DisplayCourses)
    {
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Level</th>
                            <th>Course Name</th>
                            <th>Description</th>
                            <th>Department Name</th>
                            <th>Credits</th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                        @foreach (var course in Model.Courses)
                        {
                            <tr>
                                <td>@course.Level</td>
                                <td>@course.CourseTitle</td>
                                <td>@course.Description</td>
                                <td>@course.Department.Name</td>
                                <td>@course.Credits</td>
                                <td>
                                    @Html.ActionLink("See Sections", "Index", "CourseSection", new { id = course.Id }, new { @class = "btn btn-info" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<script src="~/scripts/Schedule.js"></script>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>