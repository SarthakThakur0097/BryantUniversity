@model BryantUniversity.ViewModels.MajorRequirementsViewModel
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-5">

        </div>
        <div class="col-sm">
            <h2>Requirements for: @Model.Requirements[0].Major.Title</h2>
        </div>
        <div class="col-md-5">

        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <div class="md-form mt-0">
                <input id="myInput" class="form-control" type="text" placeholder="Search..">
            </div>
        </div>
        <div class="col-sm">

        </div>
        <div class="col-md-3">

        </div>
        <div class="col-sm">

        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <table class="table">
                <thead class="thead-dark">
                    <tr lass="bench-row">
                        <th>Course Id</th>
                        <th>Course Title</th>
                        <th>Description</th>
                        <th>Credits</th>
                        <th>Prerequisite</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    @foreach (var requirement in Model.Requirements)
                    {
                        <tr>
                            <td>@requirement.Course.CourseTitleId</td>
                            <td>@requirement.Course.CourseTitle</td>
                            <td>@requirement.Course.Description</td>
                            <td>@requirement.Course.Credits</td>
                            @if(requirement.Course.CourseMajorPreRequisites != null)
                            {
                                foreach(var course in requirement.Course.CourseMajorPreRequisites)
                                { 
                                    if (course.PreReq == null)
                                    {
                                        <td></td>
                                    }
                                    else
                                    {
                                        <td>@course.PreReq.CourseTitleId </td>
                                    }
                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>