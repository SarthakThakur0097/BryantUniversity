<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
        <div class="container">
            <div class="navbar navbar-expand-lg navbar-inverse navbar-dark bg-dark fixed-top">
                    <div class="navbar-brand">
                        @Html.ActionLink("Gwent", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div>
                        <ul class="nav navbar-nav"></ul>
                        @if (Request.IsAuthenticated)
                        {
                            <div class="navbar-text navbar-right">
                                <span>Welcome @(((BryantUniversity.Security.CustomPrincipal)User).Identity.Name)! </span>
                            </div>
                        }
                    </div>
                </div>
            </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>