<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.3/jquery.min.js"></script>
    <script src="http://code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.css" rel="stylesheet">
    <style>
        /* Modify the background color */

        .navbar-custom {
            background-color: #404040;
                /*#552583;*/
            margin-top: 0;
        }
            /* Modify brand and text color */

        .navbar-custom .navbar-brand,
        .navbar-custom .navbar-text {
            color: #fdb927;
                /*#f8f8ff*/
            font-size: 15px;
            font-weight: bold;
        }

        p {
            color: #a17f1a;
            font-family: Roboto;
            font-weight:800;
            font-size: 15px;
        }

        .fa {
          padding: 20px;
          font-size: 30px;
          width: 50px;
          text-align: center;
          text-decoration: none;
          color: #fdb927;
        }

        /* Add a hover effect if you want */
        .fa:hover {
          opacity: 0.7;
          color: #552583;
        }

        .copyright {
            color: #1B1B1B;
            font-family: Roboto;
            font-weight: 800;
            font-size: 14px;
        }

        a {
            color: #fdb927;
            font-family: Roboto;
            font-weight: 700;
            font-size: 14px;
        }

        li:hover, a:hover {
            color: #552583;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark navbar-custom" style="align-content:center">
        <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
            <ul class="navbar-nav mr-auto">
                @if (Request.IsAuthenticated && ((BryantUniversity.Security.CustomPrincipal)User).IsInRole("1"))
                {
                    <li class="nav-item">
                        @Html.ActionLink("Academic Calendar", "Index", "Calendar", new { area = "" }, new { @class = "navbar-brand" })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Master Schedule", "Index", "Schedule", new { area = "" }, new { @class = "navbar-brand" })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Users", "Index", "Faculty", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Courses", "Index", "Courses", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Manage Holds", "Create", "Courses", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    @*<li class="nav-item">
                        @Html.ActionLink("Students", "Index", "Courses", new { area = "" }, new { @class = "navbar-brand" })
                    </li>*@
                } else if(Request.IsAuthenticated && ((BryantUniversity.Security.CustomPrincipal)User).IsInRole("2"))
                {
                    <li class="nav-item">
                        @Html.ActionLink("Academic Calendar", "Index", "Calendar", new { area = "" }, new { @class = "navbar-brand" })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Master Schedule", "Index", "Schedule", new { area = "" }, new { @class = "navbar-brand" })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Teaching", "Teaching", "Faculty", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Current Schedule", "Index", "Schedule", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        @Html.ActionLink("Academic Calendar", "Index", "Calendar", new { area = "" }, new { @class = "navbar-brand" })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Look up classes", "Index", "Schedule", new { area = "" }, new { @class = "navbar-brand" })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Registration", "Index", "Registration", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Current Schedule", "Index", "Schedule", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                }

            </ul>
        </div>
        <div class="mx-auto order-0">
            <img class="navbar-brand mx-auto " src="~/Resources/mugold.png" style="width:188px;" href="#"/>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
            <ul class="navbar-nav ml-auto">

            <li class="nav-item">
                <div>
                    @if (Request.IsAuthenticated)
                    {
                        <div class="navbar-text navbar-right" id="username">
                            <span>Welcome @(((BryantUniversity.Security.CustomPrincipal)User).User.Name)! </span>
                        </div>
                    }
                </div>
                </li>
                <li class="nav-item">
                    <div class="col">
                        @if (Request.IsAuthenticated)
                        {
                            using (Html.BeginForm("Logout", "Account", FormMethod.Post))
                            {
                                <button class="btn navbar-brand cen" type="submit">Log Out</button>
                            }
                        }
                        else
                        {
                            @Html.ActionLink("Log In", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" })
                        }
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <!-- Footer -->
        <footer class="page-footer font-small stylish-color-dark pt-4">

            <!-- Footer Links -->
            <div class="container text-center text-md-left">

                <!-- Grid row -->
