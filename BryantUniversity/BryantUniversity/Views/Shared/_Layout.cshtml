                    <!-- Grid column -->
                    <div class="col-md-3 mx-auto">

                        <!-- Content -->
                        <img src="~/Resources/mambaheader.png" style="width:inherit; height:inherit" />
                        <p>
                            <br />Gigi Towers
                            <br />8-24 Mamba Drive
                            <br />Bryant, CA 02824
                            <br />(111) 222-3333
